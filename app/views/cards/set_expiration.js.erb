<% if @card.valid? %>
  $.status.showNotice('Card expiration set', 2000);
<% else %>
  $.status.showError('<%=j error_messages_for(@card) %>');
<% end %>
$('.patients').find('tr[data-id=<%= @patient.id %>]').replaceWith('<%=j render partial: '/mentors/patient', locals: { patient: @patient.reload } %>');
