= form_for @user, :url => manager_site_path(@site), :method => :put do |f|
  .field.w30
    = f.label :email
    = f.email_field :email, :autofocus => true

  .field.w30
    = f.label :password
    - unless @user.new_record?
      %p (leave blank if you don't want to change it)
    = f.password_field :password, :autocomplete => "off"

  .field.w30
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .actions
    = f.button nil, :class => 'grey'
    - if @user.persisted?
      = link_to "Remove manager", manager_site_path(@site), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => 'white button'
    = link_to "Back", @site

