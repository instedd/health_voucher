.tablewrapp
  %table.GralTable.report-table
    %colgroup
    %tbody
      %tr
        %th Clinic
        %th.number Transactions

      - if @report.empty?
        %tr
          %td(colspan="2") No clinics registered.
      - else
        %tr.totals
          %td
          %td.number
            = @report.totals[:row_count]
            %span.percentage 100%

        - @report.data.each do |row|
          %tr
            %td
              = row[:name]
              - if @report.site_id.blank?
                %span.site_name
                  (#{row[:site_name]})
            %td.number
              = row[:row_count]
              %span.percentage
                = percent_of(row[:row_count], @report.totals[:row_count])

