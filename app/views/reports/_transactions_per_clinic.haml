.tablewrapp
  %table.GralTable.report-table
    %colgroup
    %tbody
      %tr
        %th Clinic
        %th.number Transactions
        %th.number Unique Visitors
      - if @report.empty?
        %tr
          %td(colspan="3") No clinics registered in site.
      - else
        %tr.totals
          %td
          %td.number= @report.totals[:txn_count]
          %td.number= @report.totals[:unique_visitors]

        - @report.data.each do |row|
          %tr
            %td= row[:clinic_name]
            %td.number= row[:txn_count]
            %td.number= row[:unique_visitors]

