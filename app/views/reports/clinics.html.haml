%h1 Reports

= render partial: 'shared/reports_tabs'

%h2 Most frequently accessed clinics

.report-grouping
  = form_tag reports_clinics_path, id: 'report_grouping_form', method: "get", remote: true do |f|
    .report-grouping-option
      %label(for="site_id") Site
      = select_tag :site_id, sites_filter_options(params[:site_id]), :class => 'w20 site'
    .report-grouping-option.right
      %label(for="month") for month
      = select_month(params[:month].to_i, {}, name: 'month', id: 'month')
      = select_year(params[:year].to_i, { start_year: 2013, end_year: Date.today.year }, name: 'year', id: 'year')

#report_container
  = render partial: 'clinics'

:javascript
  $(function() { onReportsClinics(); });


