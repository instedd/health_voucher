- content_for :navigation do
  - if user_signed_in?
    = section "Site Management", root_path, :management
    - if current_user.admin?
      = section "Batches", batches_path, :batches
      = section "Sites", sites_path, :sites
      = section "Clinics", clinics_path, :clinics
      = section "Transactions", transactions_path, :transactions

- content_for :right_menu do
  %ul.RightMenu
    - if user_signed_in?
      %li
        #User
          = current_user.email
          %br
          %br
          .container
            %ul
              %li
                = link_to 'Settings', edit_user_path
            %hr
            %ul
              %li
                %a(href="mailto:support@instedd.org?subject=#{application_name.underscore}-bug")
                  Report a bug
              %li
                = link_to "Sign Out", destroy_user_session_path, :method => :delete
      %li
        = link_to '', edit_user_path, :class => 'fsettings'
    - else
      %li
        = link_to "Log in", new_user_session_path, :class => 'fuser'

- content_for :footer_links do
  = link_to "Home", root_path

= render :file => 'layouts/instedd_application'

