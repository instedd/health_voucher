%h1= @site.name

= render partial: '/sites/selector', :locals => { :path_helper => :site_mentors_path }

%h2 Mentors

.tablewrapp.mentors
  %table.GralTable
    %tbody
      %tr
        %th Name
        %th Patients
        %th
      - @site.mentors.each do |mentor|
        %tr
          %td
            = link_to mentor.name, site_mentor_path(@site, mentor)
          %td= mentor.patients.count
          %td
            = link_to '', site_mentor_path(@site, mentor), :class => 'farrow'
            - if mentor.patients.count == 0
              = link_to 'Remove', site_mentor_path(@site, mentor), :method => :delete, :class => 'fdelete'

%br
.w30.ux-collapsible.collapsed(data-on-expanded="box grey")
  %span
    %a.fadd Add new Mentor
  .ux-content
    = form_tag site_mentors_path(@site) do
      .field
        = label_tag "mentor[name]", 'Name'
        = text_field_tag "mentor[name]", '', :class => 'w30'
      .actions
        = button_tag 'Add', :class => 'white'


